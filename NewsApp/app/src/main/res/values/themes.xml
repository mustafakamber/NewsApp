<resources>
    <style name="Theme.NewsApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.NewsApp</item>
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!--  Text Color. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorHint">@color/pink</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand colors. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Tertiary brand colors. -->
        <item name="colorTertiary">@color/white</item>
        <item name="colorOnTertiary">#f4ecf3</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar color.-->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorControlActivated">@color/dark</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="Theme.NewsApp" parent="Base.Theme.NewsApp" />

    <!-- ImageView -->
    <style name="largeImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/large_image_size</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="hugeImageViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/huge_image_size</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@drawable/poster</item>
    </style>

    <!-- TextInput -->
    <style name="textInputLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxStrokeColor">@color/text_input_layout_border</item>
        <item name="cursorColor">?attr/colorPrimary</item>
        <item name="hintTextColor">?attr/colorPrimary</item>
    </style>

    <style name="textInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <!-- Button -->
    <style name="smallCircularPrimaryButtonStyle">
        <item name="android:layout_width">@dimen/medium_button_size</item>
        <item name="android:layout_height">@dimen/medium_button_size</item>
        <item name="android:background">@drawable/circle_button_background</item>
    </style>

    <style name="smallButtonStyle">
        <item name="android:layout_width">@dimen/medium_button_size</item>
        <item name="android:layout_height">@dimen/medium_button_size</item>
        <item name="android:background">?android:attr/colorBackground</item>
    </style>

    <style name="mediumWideFillButtonStyle">
        <item name="android:layout_width">@dimen/large_button_size</item>
        <item name="android:layout_height">@dimen/medium_button_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:background">@drawable/rectangle_fill_button_background</item>
    </style>

    <style name="mediumWideStrokeButtonStyle">
        <item name="android:layout_width">@dimen/large_button_size</item>
        <item name="android:layout_height">@dimen/medium_button_size</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:background">@drawable/rectangle_border_button_background</item>
    </style>

    <style name="largeButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/medium_button_size</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <!-- Text -->
    <style name="tinyPrimaryTextStyle">
        <item name="android:textSize">@dimen/tiny_text_size</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tinySecondaryTextStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/tiny_text_size</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="smallNormalTextStyle">
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="smallBoldPrimaryTextStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="smallBoldSecondaryTextStyle">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mediumBoldPrimaryTextStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mediumBoldSecondaryTextStyle">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="largeBoldPrimaryTextStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Divider -->
    <style name="smallDividerStyle">
        <item name="android:layout_width">@dimen/match_constraint_size</item>
        <item name="android:layout_height">@dimen/medium_border_size</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:layout_marginStart">@dimen/small_spacing_size</item>
        <item name="android:layout_marginEnd">@dimen/small_spacing_size</item>
    </style>

    <style name="largeDividerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/medium_border_size</item>
        <item name="android:layout_marginTop">@dimen/small_spacing_size</item>
        <item name="android:background">@color/gray</item>
    </style>

    <!-- SwipeDecorator -->
    <style name="swipeIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_swipe</item>
    </style>

    <!-- RecyclerView -->
    <style name="linearRecyclerViewStyle">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/match_constraint_size</item>
        <item name="android:layout_marginStart">@dimen/extra_small_spacing_size</item>
        <item name="android:layout_marginEnd">@dimen/extra_small_spacing_size</item>
    </style>

    <style name="horizontalRecyclerViewStyle">
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- ProgressBar -->
    <style name="loadingBarStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">?attr/colorPrimary</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <!--  Text Color. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/pink</item>
        <item name="android:textColorHint">@color/dark</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_pink</item>
        <item name="colorPrimaryVariant">@color/pink</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand colors. -->
        <item name="colorSecondary">@color/dark</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Navigation bar color.-->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorControlActivated">@color/dark</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
    </style>
</resources>